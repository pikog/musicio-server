// Default input style

input, label
  height auto !important
  padding 5px 15px
  cursor pointer
  border-radius 2px

input
  background color-white-light
  color color-purple

div.inputWrapper
  font-size 0

label.hiddenRadio
  display inline-block
  font-size font-normal

input[type="radio"]:checked + label.hiddenRadio
  background color-purple
  color color-white-lighter
